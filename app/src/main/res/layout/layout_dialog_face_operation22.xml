<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="录 脸"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:clickable="true"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/touxiang"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="12dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/grgr"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20sp"
                    android:text="姓名:"
                    android:textColor="@color/blake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/name"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg_rect"
                    android:focusable="true"
                    android:hint="请输入姓名(必填)" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/grgr"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20sp"
                    android:text="部门:"
                    android:textColor="@color/blake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/bumen"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg_rect"
                    android:focusable="true"
                    android:hint="请输入部门(选填)" />

            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>



    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/queding"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_btn_bg_blue"
            android:text="保存"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/chongpai"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_btn_bg_blue"
            android:text="重拍"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

    </LinearLayout>



    <!--<ListView-->
        <!--android:id="@+id/lv_group_info"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="300dp"></ListView>-->


</LinearLayout>
