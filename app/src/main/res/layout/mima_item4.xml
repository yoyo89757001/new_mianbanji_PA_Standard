<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <!--输入框-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="8dp"
                android:gravity="center"
                android:id="@+id/tt1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:inputType="numberPassword"
                android:background="@drawable/zk_lan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tt2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:inputType="numberPassword"
                android:layout_margin="8dp"
                android:background="@drawable/zk_lan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tt3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:inputType="numberPassword"
                android:layout_margin="8dp"
                android:background="@drawable/zk_lan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tt4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:inputType="numberPassword"
                android:layout_margin="8dp"
                android:background="@drawable/zk_lan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tt5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:inputType="numberPassword"
                android:layout_margin="8dp"
                android:background="@drawable/zk_lan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tt6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:inputType="numberPassword"
                android:layout_margin="8dp"
                android:background="@drawable/zk_lan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />


        </LinearLayout>
        

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

    </LinearLayout>

    <!--密码块-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1.7"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <RelativeLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_alignParentTop="true"
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <!--1-->
                <TableRow >

                    <TextView
                        android:background="@drawable/mima1bg"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_width="0dp"
                        android:id="@+id/t1"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:text="1"/>

                    <TextView
                        android:background="@drawable/mima1bg"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:id="@+id/t2"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:text="2"  />


                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/mima1bg"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:id="@+id/t3"
                        android:textColor="@color/white"
                        android:text="3"  />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/mimabg2"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:id="@+id/fanhui"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:text="返回"  />


                </TableRow>

            </TableLayout>

            <LinearLayout
                android:clipChildren="false"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="204dp">
                    <!--1-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:background="@drawable/mima1bg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/t4"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:text="4"  />


                    <TextView
                        android:background="@drawable/mima1bg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/t7"
                        android:layout_marginTop="12dp"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:text="7"  />



                    <TextView
                        android:layout_marginTop="12dp"
                        android:background="@drawable/mima1bg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/t0"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:text="0"  />




                </LinearLayout>

                <!--2-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:clipChildren="false"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:clipChildren="false"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:background="@drawable/mima1bg"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="6dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:id="@+id/t5"
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:text="5"  />

                            <TextView
                                android:background="@drawable/mima1bg"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="6dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:id="@+id/t6"
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:text="6"  />


                        </LinearLayout>


                        <LinearLayout
                            android:clipChildren="false"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:background="@drawable/mima1bg"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:id="@+id/t8"
                                android:textSize="30dp"
                                android:layout_marginRight="6dp"
                                android:textColor="@color/white"
                                android:text="8"  />

                            <TextView
                                android:background="@drawable/mima1bg"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="6dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textSize="30dp"
                                android:id="@+id/t9"
                                android:textColor="@color/white"
                                android:text="9"  />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.9"
                        android:clipChildren="false"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:background="@drawable/mimabg2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/chongzhi"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:text="重置"  />



                    </LinearLayout>


                </LinearLayout>

                <!--3-->
                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/queding"
                    android:background="@drawable/mimabg3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:ems="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:text="进入"  />


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"/>


    </LinearLayout>

</LinearLayout>